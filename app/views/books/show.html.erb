<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'userinfo', user:@user, book:@book %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= image_tag book.user.get_profile_image(100,100) %><br>
              <%= link_to(user_path(book.user.id)) do %>
              <%= book.user.name %>
              <% end %>
            </td>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <% if book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(book.user.id), class:"btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', book_path(book.id), method: :delete, class:"btn btn-sm btn-danger",data:{ confirm: "本当に消しますか？"} %></td>
            <% end %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>